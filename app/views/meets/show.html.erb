<div class="container">
  <div class="meet-grid">
    <div class="meeting-general-info ">
      <div class="meet-description text-center">
        <h1>
          <%= @meet.nombre %>
        </h1>
        <h4>
          <%= @meet.tipo %>
        </h4>
        <h6>
          <%= @meet.fecha %>
        </h6>
        <h6>
          <%= @meet.lugar %>
        </h6>
      </div>
      <div class="meet-notes mb-4">
        <h2>
          Notas de la reunión
        </h2>
        <%= simple_form_for @meet, remote: true do |f| %>
          <%= f.rich_text_area :notes, class:"mb-4" %>
          <%= f.button :submit, class:"btn btn-primary", value:"Añadir Notas" %>
        <% end %>
      </div>
      <div class="meet-tasks">
        <h2 id="tasks-title">
          Tareas de la reunión
        </h2>
        <div class="assistants-form mb-4 w-75">
          <%= simple_form_for([@meet, @task], remote: true) do |f| %>
            <%= f.input :nombre, label: "Nombre de la tarea" %>
            <%= f.input :descripcion, label: "Descripcion" %>
            <%= f.input :fecha, as: :date, html5: true, label: "Fecha de entrega" %>
            <%= f.association :assistance, collection: Assistance.where(meet: @meet), label_method: :email, include_blank: true, selected: "blank" %>
            <%= f.button :submit, class:"btn btn-primary", value:"Añadir Tarea" %>
          <% end %>
        </div>
        <% if @meet.tasks.blank? %>
          Agrega la primera tarea la reunión
        <% else %>
          <ul>
            <% @meet.tasks.reverse.each do |task| %>
              <li id="task-<%= task.id %>">
                <%= task.nombre %>
                <%= task.assistance.email %>
              </li>
            <% end %>
          </ul>
        <% end %>
      </div>
    </div>
    <div class="meeting-assistances mt-4 mb-4">
      <div class="card">
        <div class="card-body">
          <div class="card-title text-center">
            <h4>
              Asistentes de la reunión
            </h4>
          </div>
          <div class="card-text">
            <ul class="list-group list-group-flush">
              <% @meet.assistances.each do |assistance| %>
                <li class="list-group-item pl-3 pr-3 pt-1 pb-1"><%= assistance.email %> </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
