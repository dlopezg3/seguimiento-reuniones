<div class="meets-container">
  <h1>
    <i class="fas fa-building"></i>
    Tus reuniones
  </h1>
  <div class="row">
    <%@meets.each do |meet| %>
      <div class="col-xs-12 col-sm-3">
        <%= link_to meet_path(meet) do %>
          <div class="card">
            <div class="card-description">
              <h2><%= meet.nombre %></h2>
              <p><%= meet.tipo %></p>
            </div>
          </div>
        <% end %>
      </div>
    <% end %>
    <div class="col-xs-12 col-sm-3">
      <%= link_to new_meet_path, class:"add-new-button" do %>
          <p>Crea una nueva reunion</p>
          <i class="fas fa-plus-circle"></i>
      <% end %>
    </div>
  </div>
</div>
