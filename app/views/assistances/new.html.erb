<div class="container">
  <div data-controller="assistances">
    <% if @meet.assistances.blank? %>
      Agrega el primer asistente a la reuni√≥n
    <% else %>
      <% @meet.assistances.each do |assistance| %>
        <p id="assistance-<%= assistance.id %>"><%= assistance.email %></p>
      <% end %>
    <% end %>
    <div class="assistants-list">
      <li class="d-none">
      </li>
