<div class="container mt-4">
  <div class="row">
    <% @meets.each do |meet| %>
      <div class="col-xs-12 col-sm-3 d-flex align-items-stretch">
        <div class="card mb-2">
          <div class="card-header">
            <div class="card-title">
              <h3>
                <%= meet.nombre %>
              </h3>
            </div>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">
              Tipo de la reunión: <%= meet.tipo %>
            </li>
          </ul>
          <div class="card-body">
            <%= link_to 'Ver más', meet_path(meet), class:"card-link"%>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <%= link_to "Nueva Reunión", new_meet_path, class:"btn btn-secondary mt-4"  %>
</div>
